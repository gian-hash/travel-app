@model TravelAppHybrid.Models.Trip

<h2>Modifica Viaggio</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Destinazione</label>
    <input name="Destination" value="@Model.Destination" />

    <label>Data Inizio</label>
    <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />

    <label>Data Fine</label>
    <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />

    <label>Descrizione</label>
    <textarea name="Description">@Model.Description</textarea>

    <button type="submit">Aggiorna</button>
</form>
