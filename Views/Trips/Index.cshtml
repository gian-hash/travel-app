@model IEnumerable<TravelAppHybrid.Models.Trip>

<h2>Lista Viaggi</h2>

<a href="/Trips/Create">âž• Aggiungi Viaggio</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Destinazione</th>
            <th>Dal</th>
            <th>Al</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Destination</td>
                <td>@t.StartDate.ToShortDateString()</td>
                <td>@t.EndDate.ToShortDateString()</td>
                <td>
                    <a href="/Trips/Edit/@t.Id">Modifica</a> |
                    <a href="/Trips/Delete/@t.Id">Elimina</a> |
                    <a href="/Trips/DownloadPdf/@t.Id">PDF</a>
                    <a class="btn btn-primary mb-3" href="/Trips/Create">+ Nuovo Viaggio</a>
                    <a class="btn btn-outline-secondary btn-sm" href="/Trips/DownloadPdf/@t .Id">
                        <i class="bi bi-file-earmark-pdf"></i> PDF
                        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
